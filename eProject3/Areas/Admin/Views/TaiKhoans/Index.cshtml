@model IEnumerable<eProject3.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    @*<h2 class="header-title">Account list</h2>*@
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            @*<a asp-area="Admin" asp-controller="TaiKhoans" asp-action="Index" class="breadcrumb-item">Account list</a>*@

            <span class="breadcrumb-item active">Orders List</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" id="idrole" name="idrole" style="min-width: 180px;" asp-items="ViewBag.QuyenTruyCap">
                            <option value="0" disabled selected>Quyen truy cap</option>
                        </select>
                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="iddis" name="iddis" style="min-width: 180px;" asp-items="ViewBag.Disturb">
                            <option value="" disabled selected>Disturb</option>
                        </select>


                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="idcal" name="idcal" style="min-width: 180px;" asp-items="ViewBag.CallerTunes">
                            <option value="" disabled selected>CallerTunes</option>
                        </select>


                    </div>
                </div>
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Quyen</th>
                        <th>DoNotDisturb</th>
                        <th>CallerTune</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.AccountId
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        <h6 class="m-b-0 m-l-10">@item.Phone</h6>
                                    </div>
                                </td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>
                                <td>@item.Role.Rol</td>
                                <td>
                                    @if (item.DoNotDisturb == true)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>DeActive</div>
                                        </div>
                                    }

                                </td>
                                <td>
                                    @if (item.CallerTunes == true)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>DeActive</div>
                                        </div>
                                    }

                                </td>
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="TaiKhoans" asp-action="Details" asp-route-id="@item.AccountId">View</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="TaiKhoans" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a>
                                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="TaiKhoans" asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
